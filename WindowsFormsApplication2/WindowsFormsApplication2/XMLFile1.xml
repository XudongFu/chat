<?xml version="1.0" encoding="utf-8" ?> 
<!-- 登陆动作的消息-->
<root>
<message>
  <action>signOn</action>
  <th></th>
  <value>
    <clientType></clientType>
    <id></id>
    <password></password>
  </value>
</message>

<!-- 测试服务器的链接 -->
  <message>
    <action>testConnection</action>
    <th></th>
    <value></value>
  </message>
  
  <!--注册-->
  <message>
    <action>signIn</action>
    <th></th>
    <value>
      <name></name>
      <sex></sex>
      <birthday></birthday>
      <colloge></colloge>
      <company></company>
      <password></password>
    </value>
  </message>

<!--退出-->
<message>
  <action>signOff</action>
  <th></th>
  <value>
    <clientType></clientType>
    <id></id>
    <password></password>
  </value>
</message>

 
  <!--消息  发送给用户-->
  <message>
    <action>communication</action>
    <th></th>
    <value>
      <from></from>
      <type>user/group</type>
      <to></to>
      <message></message>
    </value>
  </message>

<!--消息确认-->
  <message>
    <action>
      confirm
    </action>
    <th></th>
    <value></value>
  </message>
  
 <!--数据请求，好友和群组列表-->
 <message>
    <action>DataRequest</action>
    <th></th>
   <version></version>
   <from></from>
 </message>
  
  
  
   <message>
    <action>DataAnswer</action>
    <th></th>
    <value>
      <!--changed 代表基本信息发生改变，add和deleted 分别代表用户的增添和删除 -->
      <user  condition="add/deleted/changed"></user>
      
      <group condition="add/deleted/changed" ></group>
      <group groupId="">
        <user  condition="add/deleted"></user>
      </group>
    </value>
  </message>

  
  <!--请求用户信息-->
   <message>
      <action>InfoUpdate</action>
      <th></th>
      <value >
        <friendId></friendId>
        <groupId></groupId>
      </value>
  </message>
</root>